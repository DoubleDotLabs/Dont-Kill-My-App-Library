<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/twenty_four_dp"
            android:paddingEnd="@dimen/twenty_four_dp"
            android:paddingTop="@dimen/twelve_dp"
            android:paddingBottom="@dimen/twelve_dp"
            android:baselineAligned="false">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <dev.doubledot.doki.views.BaselineGridTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:text="@string/manufacturer"/>

            <dev.doubledot.doki.views.BaselineGridTextView
                    android:id="@+id/doki_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="Google"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="end">

            <dev.doubledot.doki.views.BaselineGridTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical|end"
                    android:maxLines="1"
                    android:text="@string/rating"/>

            <dev.doubledot.doki.views.BaselineGridTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:maxLines="1"
                    tools:text="Google"/>

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="@color/divider_color"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/twenty_four_dp"
            android:paddingEnd="@dimen/twenty_four_dp"
            android:paddingTop="@dimen/twelve_dp"
            android:paddingBottom="@dimen/twelve_dp"
            android:background="@color/device_details_color"
            android:baselineAligned="false">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <dev.doubledot.doki.views.BaselineGridTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/device"/>

            <dev.doubledot.doki.views.BaselineGridTextView
                    android:id="@+id/doki_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    tools:text="Pixel 3 XL"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:orientation="vertical">

            <dev.doubledot.doki.views.BaselineGridTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/running"/>

            <dev.doubledot.doki.views.BaselineGridTextView
                    android:id="@+id/doki_android_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    tools:text="Google"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="ifContentScrolls">

        <dev.doubledot.doki.views.BaselineGridTextView
                android:id="@+id/doki_main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="@dimen/twenty_four_dp"
                android:paddingEnd="@dimen/twenty_four_dp"
                android:paddingTop="@dimen/twelve_dp"
                android:paddingBottom="@dimen/twelve_dp"
                tools:text="Google"/>

    </ScrollView>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="@color/divider_color"/>

    <LinearLayout
            android:id="@+id/doki_close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/touch_target"
            android:background="?selectableItemBackground">

        <dev.doubledot.doki.views.BaselineGridTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/twelve_dp"
                android:text="@string/close"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="@color/divider_color"/>

</LinearLayout>
